.content
  h1
    font-size: 25px

  blockquote
    padding: 0

    > p
      border: none
      padding: 13px 2em
      color: #eee
      border-radius: 0

  pre
    padding: 2em

    > code
      overflow: visible

  table
    tr:nth-child(2n+1) > td
      background-color: #fff

    tr:nth-child(2n) > td
      background-color: #fbfcfd

.tocify-wrapper > img
  max-width: 150px
  margin: 10px auto

.authenticated
  padding: 1px 10px
  text-shadow: none
  font-weight: bold
  white-space: nowrap
  color: #fff
  border-radius: 9px
  background-color: #3a87ad
  display: block
  width: max-content
  margin-bottom: 1em
